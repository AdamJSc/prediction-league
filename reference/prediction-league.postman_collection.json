{
	"info": {
		"_postman_id": "0a36240e-0a13-4dc6-a734-ce9d39a039ab",
		"name": "Prediction League",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Entry",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "b485d69b-fcca-4c0e-975f-626754fb4f5b",
						"exec": [
							"pm.test(\"successful request\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([201,202]);",
							"});",
							"",
							"pm.test(\"update environment variables\", function () {",
							"    if (pm.response.code == 201) {",
							"        var jsonData = pm.response.json();",
							"        pm.environment.set(\"entry_id\", jsonData.data.entry.id);",
							"        pm.environment.set(\"entry_short_code\", jsonData.data.entry.short_code);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\"entrant_name\":\"Harry Redknapp\",\"entrant_nickname\":\"Mr Harry R\",\"entrant_email\":\"harry.redknapp@football.net\",\"pin\":\"{{realm_pin}}\"}"
				},
				"url": {
					"raw": "{{base_url}}/api/season/latest/entry",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"season",
						"latest",
						"entry"
					]
				}
			},
			"response": []
		},
		{
			"name": "Update Entry Payment Details",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "024fd8e1-bf59-4fe5-9294-2955da05326f",
						"exec": [
							"pm.test(\"successful request\", function () {",
							"    pm.expect(pm.response.code).to.equal(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PATCH",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\"payment_method\":\"paypal\",\"payment_ref\":\"paypal_id_1234\",\"short_code\":\"{{entry_short_code}}\"}"
				},
				"url": {
					"raw": "{{base_url}}/api/entry/{{entry_id}}/payment",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"entry",
						"{{entry_id}}",
						"payment"
					]
				}
			},
			"response": []
		},
		{
